<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="hit.android.stock">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        tools:replace="android:supportsRtl"
        android:theme="@style/Theme.StockSearch">
        <activity
            android:name="hit.android.stock.activity.MainActivity"
            android:exported="false" />
        <activity
            android:name="hit.android.stock.activity.StockDetailsActivity"
            android:label="@string/title_activity_stock_details"
            android:parentActivityName="hit.android.stock.activity.MainActivity" />
        <activity android:name="hit.android.stock.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>